<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.we.connecttopi_socket.MainActivity"
    android:id="@+id/shakeImgDown">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/btn_buz_on"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOOR"
        android:id="@+id/btn_door_status"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btn_buz_on"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_below="@+id/btn_door_status"
        android:layout_alignEnd="@+id/btn_door_status"
        android:layout_marginTop="121dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor"
        android:id="@+id/checkBox"
        android:layout_below="@+id/btn_door_status"
        android:layout_alignParentStart="true"
        android:checked="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/btn_buz_off"
        android:layout_alignTop="@+id/btn_buz_on"
        android:layout_toEndOf="@+id/btn_buz_on"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="COFFEE"
        android:id="@+id/textView2"
        android:layout_above="@+id/btn_buz_off"
        android:layout_alignParentStart="true"/>

    <ImageView android:id="@+id/imgopen" android:layout_width="match_parent"
               android:layout_height="fill_parent"
               android:contentDescription="@null" android:background="@drawable/imgopen"
               android:nestedScrollingEnabled="true"
               android:focusableInTouchMode="true"
               android:layout_marginStart="314dp"
               android:layout_alignParentBottom="true"
               android:layout_toEndOf="@+id/textView" />

    <ImageView android:id="@+id/imgclose" android:layout_width="match_parent"
               android:layout_height="fill_parent"
               android:contentDescription="@null" android:background="@drawable/imgclose"
               android:nestedScrollingEnabled="true"
               android:focusableInTouchMode="true"
               android:layout_marginStart="314dp"
               android:layout_alignParentBottom="true"
               android:layout_toEndOf="@+id/textView" />

</RelativeLayout>
