<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.we.connecttopi_socket.MainActivity"
    android:id="@+id/shakeImgDown">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/btn_buz_on"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/btn_buz_off"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/btn_buz_on"
        android:layout_alignStart="@+id/btn_buz_on" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOOR"
        android:id="@+id/btn_door_status"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btn_buz_off" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor"
        android:id="@+id/checkBox"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:checked="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/btn_buz_off"
        android:layout_toStartOf="@+id/checkBox"
        android:layout_marginEnd="176dp"/>
</RelativeLayout>
